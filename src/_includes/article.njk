    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="{{ description }}">
    <meta name="keywords" content="hospital, anantapur, multi speciality, nursing home, andhra pradesh, health care">
    <meta name="author" content="{{ author }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="index, follow">

    <meta property="og:title" content="{{ title }} - Santhi Multispeciality Hospital">
    <meta property="og:description" content="{{ description }}">
    <meta property="og:type" content="article">
    <meta property="og:site_name" content="Santhi Multispeciality Hospital">
    <meta property="og:url" content="{{ absUrl }}{{ page.url }}">
    <meta property="og:image" content="{{ absUrl }}{{ image }}">
