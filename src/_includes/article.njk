    <style>
        .testimonial-section { background-color: #f8f9fa; padding: 50px 0; }
        .carousel-inner .item { text-align: center; padding: 20px; }
        .testimonial-card { background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); display: inline-block; max-width: 600px; }
        .star-rating { color: #ffc107; font-size: 18px; margin-bottom: 10px; }
        #arogyasri-benefits ul { list-style: none; padding-left: 0; }
        #arogyasri-benefits ul li { padding-left: 1.5em; text-indent: -1.5em; margin-bottom: 10px; }
        #arogyasri-benefits ul li i { color: #1a76d1; margin-right: 8px; width: 1.5em; }
        #arogyasri-benefits .arogyasri-img { text-align: center; padding-top: 20px; }
        p, li{ font-size: 16px !important; }
        li{ margin: 10px; }
        /* navbar shit */
        @media (max-width: 391px) { .navbar-brand { height: 82px !important; line-height: 1; padding-top: 2px !important; } }
        @media (min-width: 391px) and (max-width: 495px) { .navbar-brand { height: 55px !important; display: flex; align-items: center; } }
        @media (max-width: 767px){ #about{ padding: 50px 50px 0px 0px !important; } }
        .photo-box, .video-box { background: #f5f5f5; padding: 10px; margin-bottom: 20px; border-radius: 5px; }
        .photo-box img { width: 100%; height: auto; border-radius: 5px; }
        .video-box video { width: 100%; border-radius: 5px; }
        /* Blog specific styles */
        #blog-article { padding: 60px 15px; }
        .blog-image { position: relative; width: 100%; aspect-ratio: 16 / 9; overflow: hidden; border-radius: 12px; margin-bottom: 25px; }
        .blog-image img { width: 100%; height: 100%; object-fit: cover; display: block; }
        .blog-text { margin-top: 20px; font-size: 1rem; line-height: 1.7; }
        .blog-post h4 { margin-top: 25px; margin-bottom: 10px; font-size: 1.3rem; }
    </style>
    
    <script type="application/ld+json">
        [
            {
                "@context": "https://schema.org",
                "@type": "BlogPosting",
                "mainEntityOfPage": {
                    "@type": "WebPage",
                    "@id": "{{ absUrl }}{{ page.url }}"
                },
                "headline": "{{ title }}",
                "image": [
                    "{{ absUrl }}{{ image }}"
                ],
                "datePublished": "{{ date | htmlDateString }}",
                "dateModified": "{{ date | htmlDateString }}",
                "author": {
